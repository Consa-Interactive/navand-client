generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
  WORKER
  DRIVER
}

enum OrderStatus {
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  RETURNED
  COMPLETED
  APPROVED
  PURCHASED
  REJECTED
  PENDING
  IN_TRANSIT
  DELIVERED_TO_WAREHOUSE
  PREPAID
}

model User {
  id          Int       @id @default(autoincrement())
  phoneNumber String    @unique
  name        String
  password    String
  address     String?
  city        String?
  country     String?
  role        Role      @default(CUSTOMER)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  orders      Order[]
  isActive    Boolean   @default(true)
  lastLogin   DateTime?
}

model Order {
  id                 Int         @id @default(autoincrement())
  title              String?
  size               String?
  color              String?
  quantity           Int         @default(1)
  price              Float       @default(0)
  shippingPrice      Float       @default(0)
  localShippingPrice Float       @default(0)
  status             OrderStatus @default(PENDING)
  productLink        String?
  imageUrl           String?
  notes              String?
  user               User        @relation(fields: [userId], references: [id])
  userId             Int
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  @@index([userId])
  @@index([status])
}
